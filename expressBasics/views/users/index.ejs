<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">

    <title>
        <%=title %>
    </title>
</head>
<body>
  
    <%- include("../partials/nav") %>


    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <!-- <% for( let index = 0; index < categories.length; index++ ) { %>
                        <a href="" class="list-group-item list-group-item-action">
                            <%= categories[index] %>
                        </a>

                    <% } %> -->

                    <%- include('../partials/categories',categories) %>

                </div>
            </div>
            <div class="col-md-9">
                    <h1 class="h3 mb-3">
                        <%=title %>
                        
                    </h1>
                    <% blogs.forEach(blog  => { %>
                        <div class="card mb-3">

                            <div class="row">
                                <div class="col-md-4">
                                    <img src="/static/images/<%= blog.resim %>" class="img-fluid" alt="Man">
                                </div>
    
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= blog.baslik %>
                                        </h5>
                                        <p class="card-text">
                                            Lorem ipsum, dolor sit amet consectetur adipisicing elit. Veritatis quae sed debitis praesentium molestiae, laboriosam iste aliquid quam repellat dolore reiciendis necessitatibus corporis repellendus iusto soluta in amet natus? Reiciendis?
                                        </p>
                                    </div>
                                </div>
    
                            </div>
    
                    </div>
                   <% }) %>
              
            </div>
            
        </div>
        <%- include('../partials/paginations') %>

    </div>

